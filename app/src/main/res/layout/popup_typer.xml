<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#222222"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please create a text style first."
        android:textColor="#FF5555"
        android:textSize="14sp"
        android:visibility="gone"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnImportTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Import .txt"
            android:textSize="12sp"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnDetectBubbles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Detect Bubbles"
            android:textSize="12sp"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnPasteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paste Text"
        android:textSize="12sp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/pasteContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/etPasteInput"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#333333"
            android:textColor="#FFFFFF"
            android:gravity="top|start"
            android:padding="8dp"
            android:inputType="textMultiLine|text"
            android:hint="Paste your text here..."
            android:textColorHint="#888888"/>

        <Button
            android:id="@+id/btnParsePaste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parse"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTyperText"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scrollbars="vertical"
        android:background="#111111"/>

    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@color/white"/>

    </FrameLayout>

</LinearLayout>
