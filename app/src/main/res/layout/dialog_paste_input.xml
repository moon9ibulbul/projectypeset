<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_dark"
    android:padding="16dp">

    <EditText
        android:id="@+id/etPasteInputDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_input_dark"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:hint="Paste your text here..."
        android:textColorHint="#888888"
        android:textSize="14sp"
        android:minLines="5"
        android:maxLines="10"
        android:gravity="top|start"
        android:inputType="textMultiLine|text"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnParsePasteDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parse Text"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_button_dark"/>

</LinearLayout>
