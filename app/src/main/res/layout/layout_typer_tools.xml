<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_panel_dark"
    android:padding="8dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/btnToolHand"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_hand"
        android:padding="8dp"
        app:tint="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto"/>

    <ImageView
        android:id="@+id/btnToolRect"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_crop_square"
        android:padding="8dp"
        app:tint="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto"/>

    <ImageView
        android:id="@+id/btnToolLasso"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_lasso"
        android:padding="8dp"
        app:tint="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto"/>

    <ImageView
        android:id="@+id/btnToolEraser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_eraser"
        android:padding="8dp"
        app:tint="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto"/>

</LinearLayout>
